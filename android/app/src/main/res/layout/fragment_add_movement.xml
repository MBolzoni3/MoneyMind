<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aggiungi movimento"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Nome -->
            <EditText
                android:id="@+id/et_nome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nome"
                android:inputType="text"
                android:minHeight="48dp" />

            <!-- Importo -->
            <EditText
                android:id="@+id/et_importo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Importo"
                android:inputType="numberDecimal"
                android:minHeight="48dp" />

            <!-- Importo valuta predefinita (solo visualizzazione) -->
            <EditText
                android:id="@+id/et_importo_valuta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:hint="Importo valuta predefinita"
                android:minHeight="48dp" />

            <!-- Data -->
            <EditText
                android:id="@+id/et_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Data"
                android:inputType="date"
                android:minHeight="48dp" />

            <!-- Valuta -->
            <Spinner
                android:id="@+id/sp_valuta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp" />

            <!-- Tipologia -->
            <Spinner
                android:id="@+id/sp_tipologia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp" />

            <!-- Note -->
            <EditText
                android:id="@+id/et_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Note"
                android:inputType="textMultiLine"
                android:minHeight="48dp" />

            <!-- Movimento ricorrente -->
            <CheckBox
                android:id="@+id/cb_ricorrente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Movimento ricorrente" />

            <!-- Tipologia Ricorrenza -->
            <Spinner
                android:id="@+id/sp_tipologia_ricorrenza"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp" />

            <!-- Intervallo Ricorrenza -->
            <EditText
                android:id="@+id/et_intervallo_ricorrenza"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Intervallo ricorrenza"
                android:inputType="number"
                android:minHeight="48dp" />

            <!-- Data Fine -->
            <EditText
                android:id="@+id/et_data_fine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Data fine"
                android:inputType="date"
                android:minHeight="48dp" />

            <!-- Pulsante -->
            <Button
                android:id="@+id/btn_aggiungi_movimento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aggiungi movimento"
                android:backgroundTint="@color/cardview_dark_background"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
